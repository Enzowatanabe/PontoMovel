	<div class="centralizado">
		<div class="container__principal">
			<p class="titulo">BANHEIROS</p>
			<div class="linha"></div>
			<div class="mosaico">
				<div class="container__coluna">
					<img
						class="imagem"
						src="/PontoMovel/banheiros/imagem-1.png"
					/>
					<img
						class="imagem"
						src="/PontoMovel/banheiros/imagem-2.png"
					/>
				</div>
				<div class="container__coluna">
					<img
						class="imagem"
						src="/PontoMovel/banheiros/imagem-3.png"
					/>
					<img
						class="imagem"
						src="/PontoMovel/banheiros/imagem-4.png"
					/>
